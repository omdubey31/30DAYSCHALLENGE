532. K-diff Pairs in an Array

class Solution:
    def findPairs(self, nums: List[int], k: int) -> int:
        nums.sort()
        count = 0
        i = 0
        n = len(nums)
        j = 0
        while(j<n ):
            diff = nums[j] - nums[i]
            if j==i or diff < k:
                j += 1
            elif diff > k:
                i += 1
            else:                           
               if diff == k:
                    count += 1
                    i += 1
                    j += 1
                    while(j<n and nums[j] == nums[j-1]):
                        j+= 1                
        return count
        
